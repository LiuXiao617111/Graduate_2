@model MvcGraduate.Models.Students

@{
    ViewBag.Title = "HomeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script>
        function RedirectToInteraction() {
            location.href = "@Url.Action("Index", "Interaction", new { RedirectStr = "RedirectToArticle" })";
        }
        function RedirectToQuestion() {
            location.href = "@Url.Action("Index", "Interaction", new { RedirectStr = "RedirectToQuestion" })";
        }
        function RedirectToImage() {
            location.href = "@Url.Action("Index", "Interaction")";
        }
        function RedirectToNotifyNews() {
            location.href = "@Url.Action("Index", "NotifyNews")";
        }
        function RedirectToStudy() {
            location.href = "@Url.Action("Index", "Study")";
        }
        function RedirectToMaterial() {
            location.href = "@Url.Action("Index", "Grade", new {RedirectStr="RedirectToMaterial" })";
        }
        function SubmitQuestion() {
            $.post(
                "@Url.Action("SubmitQuestion", "Home")",
                { "info": $('#zhuye_TiWenKuang').val() },
                function (data) {
                    if (data == "True")
                        alert("保存成功");
                    else
                        alert("保存失败");
                });
        }
        $('.title_navigate a:eq(0) div').addClass('logo_left_title_select');
        //填充分享的文章
        $.post(
            "@Url.Action("GetMyArt", "Home")",
            function (data) {
                $('#JS_myArtDiv').html(data);
            });
        //课程表
        $.post(
            "@Url.Action("GetSchedule", "Home")",
            function (data) {
                $('#JS_Home_TimeTable_Div').html(data);
            });
        $.post(
            "@Url.Action("GetShareArt", "Home")",
            function (data) {
                $('#JS_ShareArtDiv').html(data);
            });
        $.post(
            "@Url.Action("GetNotify", "Home")",
            function (data) {
                $('#JS_NotifyDiv').html(data);
            });
        $.post(
            "@Url.Action("GetQuestion", "Home")",
            function (data) {
                $('#JS_QuestionDiv').html(data);
            });
        $.post(
            "@Url.Action("GetMyImages", "Home")",
            function (data) {
                $('#JS_MyImageDiv').html(data);
            });
        $.post(
            "@Url.Action("GetShareImages", "Home")",
            function (data) {
                $('#JS_ShareImageDiv').html(data);
            });
        $.post(
            "@Url.Action("GetHonour", "Home")",
            function (data) {
                $('#JS_DashiDiv').html(data);
            });
        $.post(
            "@Url.Action("GetTeacherImages", "Home")",
            function (data) {
                $('#JS_TeacherHomeDiv').html(data);
            });
        $.post(
            "@Url.Action("GetBanWei", "Home")",
            function (data) {
                $('#JS_BanWeiHomeDiv').html(data);
            });
    </script>
}

