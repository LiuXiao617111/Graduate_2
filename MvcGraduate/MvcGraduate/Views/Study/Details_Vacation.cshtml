@model MvcGraduate.Models.Vacation
@{
    TimeSpan timeSpan =(TimeSpan)(Model.EndTime - Model.StartTime);
}
<fieldset>
    <table border="0" width="100%" cellspacing="0" cellpadding="3" class="small">
        <tr>
            <td>
                <img align="absmiddle" src="~/Images/notify_new.gif" />
                <span class="big3">学生请假详情</span>
            </td>
        </tr>
    </table>
    <table width="80%" align="center" border-spacing="0" class="TableBlock">
        <tr>
            <td>年级</td>
            <td>@Html.DisplayFor(model => model.Students.Grade.Faculty.Name)</td>
        </tr>
        <tr>
            <td>班级</td>
            <td>@Html.DisplayFor(model => model.Students.Grade.Name)</td>
        </tr>
        <tr>
            <td>姓名</td>
            <td>@Html.DisplayFor(model => model.Students.Name)</td>
        </tr>
        <tr>
            <td>创建时间</td>
            <td>@Html.DisplayFor(model => model.ApplyTime)</td>
        </tr>
        <tr>
            <td>开始时间</td>
            <td>@Html.DisplayFor(model => model.StartTime)</td>
        </tr>
        <tr>
            <td>结束时间</td>
            <td>@Html.DisplayFor(model => model.EndTime)</td>
        </tr>
        <tr>
            <td>请假天数</td>
            <td>@timeSpan.Days 天</td>
        </tr>
        <tr>
            <td>请假原因</td>
            <td>@Html.DisplayFor(model => model.Reason)</td>
        </tr>
        <tr>
            <td>审批状态</td>
            <td>@Html.DisplayFor(model => model.State)</td>
        </tr>
        <tr>
            <td>附件</td>
            <td>@Html.DisplayFor(model => model.Appendix)</td>
        </tr>
        <tr align="center">
            <td nowrap="" colspan="2" class="TableControl">
                <input class="BigButton" type="button" value="关闭" />
            </td>
        </tr>
    </table>
</fieldset>
