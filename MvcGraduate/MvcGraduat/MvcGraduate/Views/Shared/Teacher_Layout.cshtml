<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    @Styles.Render("~/Content/CSS/css")
</head>
<body>
    <div>
        <div id="logo">
            <div class="logo_img">
                <img src="~/Images/page_logo.png" />
                <img src="~/Images/leadlogo.png" />
            </div>
            <div class="logo_login">
                <img src="~/Images/logout.png" />
                <img src="~/Images/login.png" />
            </div>
        </div>
        <div id="Teachermain">
            <div class="Teachermain_left">
                <ul id="Teacher_Navigation" class="title">
                    <li style="background-image:url(../Images/data1.png);background-repeat:no-repeat;background-position:22% 50%;" onclick="location.href = '@Url.Action("Index")'"><a href="@Url.Action("Index")">数据统计</a></li>
                    <li style="background-image:url(../Images/1.png);background-repeat:no-repeat;background-position:14% 50%;" onclick="location.href = '@Url.Action("Manager")'"><a href="@Url.Action("Manager")">教师管理</a></li>
                </ul>
            </div>
            @RenderBody()
        </div>
        @RenderPage("~/Views/Shared/FriendlyLink.cshtml")
